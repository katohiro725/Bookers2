<% if flash[:notice] %>

  <p class="notice01"><%= flash[:notice] %></p>

<% end %>

<div class="col-xs-3">


<%= render 'layouts/userinfo', user: @user %>
<%= render 'layouts/books', book: @book %>
</div>


<div class="col-xs-9">

<h1>Book detail</h1>
<td>
<%= link_to (attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg"),user_path(@user)%>
<%= link_to (@user.name),user_path(@user) %>
</td>
<p><strong>TItle:</strong><%= @book.title %>      </p>


<p><strong>Body:</strong><%= @book.body %>      </p>


<% if @book.user == current_user %>

  <p><%= link_to "Edit", edit_book_path(@book) %></p>
  <p><%= link_to "Destroy",@book, method: :delete, data: {confirm: "Are you sure?"} %></p>


<% end %>

</div>


