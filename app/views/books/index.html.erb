<% if flash[:notice] %>

  <p class="notice01"><%= flash[:notice] %></p>

<% end %>

<div class="col-xs-3">
<%= render 'layouts/userinfo', user: @user %>
<%= render 'layouts/books', book: @book %>
</div>

<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-xs-9">

  <h1>Books</h1>
  <div class="container">  <!-- この行を追加 -->
  <div class="row">

<table class="table table-striped">
<thead>
<tr>
<th>User</th>
<th>Title</th>
<th>Body</th>
<th colspan="3"></th>
</tr>
</thead>




<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= link_to (attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg"),user_path(book.user.id)%>
</td>
<td>
<%= link_to (book.title), book_path(book.id) %>
</td>
<td>
<%= book.body %>
</td>


</tr>
<% end %>


</tbody>
</table>

</div>  <!-- この行を追加 -->
</div>




</div>