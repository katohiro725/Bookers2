<% if flash[:notice] %>

  <p class="notice01"><%= flash[:notice] %></p>

<% end %>

<% provide(:title, 'All users') %>

<div class="col-xs-3">


<%= render 'layouts/userinfo', user: @user %>
<%= render 'layouts/books', book: @book %>
</div>

<div class="col-xs-9">
<h1>All users</h1>

<div class="container">  <!-- この行を追加 -->
  <div class="row">


<table class="table table-striped">
<thead>
<tr>
<th>image</th>
<th>name</th>

</tr>
</thead>

<tbody>

<% @users.each do |user| %>
<tr>

<td>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
</td>
<td>
<%= user.name %>
</td>

<td>
  <%= link_to "Show", user_path(user.id) %>
</td>

</tr>

<% end %>

</tbody>

</table>

</div>  <!-- この行を追加 -->
</div>

</div>
